{
  "name": "project-orca",
  "version": "1.0.0",
  "private": true,
  "description": "Project Orca - Next.js Monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspace=apps/web",
    "start": "npm run start --workspace=apps/web",
    "lint": "npm run lint --workspace=apps/web",
    "clean": "rm -rf node_modules && rm -rf apps/*/node_modules && rm -rf packages/*/node_modules",
    "install:all": "npm install"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/project-orca.git"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "wrangler": "^4.24.3"
  }
}
